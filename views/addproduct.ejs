<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product - Inventory Management</title>
    <!-- Load Core Styles -->
    <link rel="stylesheet" href="/css/app.css" />
    <!-- Load Form Specific Styles -->
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body class="auth-body">
    <!-- Reusing import-wrapper for correct width (from app.css) -->
    <div class="auth-wrapper import-wrapper">
      <div class="auth-card">
        <header class="auth-header">
          <h1>Add New Product</h1>
          <p>Create a new inventory item</p>
        </header>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="auth-alert auth-alert-error">
            ⚠️ <%= errorMessage %>
          </div>
        <% } %>

        <form action="/products/new" method="POST" class="auth-form">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <!-- Name -->
          <div class="form-group">
            <label for="name" class="form-label">Product Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-input"
              placeholder="e.g., Wireless Mouse"
              value="<%= typeof old !== 'undefined' ? old.name : '' %>"
              required
            />
          </div>

          <!-- Category -->
          <div class="form-group">
            <label for="category" class="form-label">Category</label>
            <!-- Note: name="category" matches the controller -->
            <select id="category" name="category" class="form-input">
              <option value="" disabled selected>-- Select Category --</option>
              <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                <% categories.forEach(cat => { %>
                  <option 
                    value="<%= cat.id %>" 
                    <%= (typeof old !== 'undefined' && old.category == cat.id) ? 'selected' : '' %>
                  >
                    <%= cat.name %>
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>

          <!-- Price & Quantity (Grid Layout via form.css) -->
          <div class="form-row">
            <div class="form-group">
              <label for="price" class="form-label">Price (€) *</label>
              <input
                type="number"
                id="price"
                name="price"
                class="form-input"
                step="0.01"
                min="0"
                max="1000000"
                placeholder="29.99"
                value="<%= typeof old !== 'undefined' ? old.price : '' %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="quantity" class="form-label">Quantity *</label>
              <input
                type="number"
                id="quantity"
                name="quantity"
                class="form-input"
                min="0"
                max="10000"
                placeholder="100"
                value="<%= typeof old !== 'undefined' ? old.quantity : '' %>"
                required
              />
            </div>
          </div>

          <!-- Description with AI Button -->
          <div class="form-group">
            <div class="label-row">
              <label for="description" class="form-label">Description *</label>
              
              <!-- AI Trigger Button -->
              <button type="button" id="aiBtn" class="btn-ai">
                <span>✨</span> Generate with AI
              </button>
            </div>

            <textarea
              id="description"
              name="description"
              class="form-input"
              rows="4"
              placeholder="Detailed product description..."
              required
            ><%= typeof old !== 'undefined' ? old.description : '' %></textarea>
          </div>

          <!-- Actions -->
          <div class="form-actions">
            <button type="submit" class="auth-btn">Create Product</button>
            
            <!-- Smart Cancel: Returns to previous page -->
            <a href="javascript:history.back()" class="btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Load JS for AI Logic -->
    <script src="/js/app.js"></script>
  </body>
</html>