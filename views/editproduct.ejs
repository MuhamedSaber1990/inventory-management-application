<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product - Inventory Management</title>
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body class="auth-body">
    <!-- Reusing import-wrapper for consistent max-width -->
    <div class="auth-wrapper import-wrapper">
      <div class="auth-card">
        <header class="auth-header">
          <h1>Edit Product</h1>
          <p>Update details for <strong><%= product.name %></strong></p>
        </header>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="auth-alert auth-alert-error">
            ⚠️ <%= errorMessage %>
          </div>
        <% } %>

        <form action="/products/edit/<%= product.id %>" method="POST" class="auth-form">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <!-- Name -->
          <div class="form-group">
            <label for="name" class="form-label">Product Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-input"
              value="<%= product.name %>"
              required
            />
          </div>

          <!-- Category -->
          <div class="form-group">
            <label for="category" class="form-label">Category</label>
            <!-- Changed name="category_id" to "category" to match Controller logic -->
            <select id="category" name="category" class="form-input">
              <option value="" disabled>-- Select Category --</option>
              <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                <% categories.forEach(cat => { %>
                  <option 
                    value="<%= cat.id %>" 
                    <%= product.category_id === cat.id ? 'selected' : '' %>
                  >
                    <%= cat.name %>
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>

          <!-- Price & Quantity -->
          <div class="form-row">
            <div class="form-group">
              <label for="price" class="form-label">Price (€) *</label>
              <input
                type="number"
                id="price"
                name="price"
                class="form-input"
                step="0.01"
                min="0"
                max="1000000"
                value="<%= product.price %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="quantity" class="form-label">Quantity *</label>
              <input
                type="number"
                id="quantity"
                name="quantity"
                class="form-input"
                min="0"
                max="10000"
                value="<%= product.quantity %>"
                required
              />
            </div>
          </div>

          <!-- Description with AI Button -->
          <div class="form-group">
            <div class="label-row">
              <label for="description" class="form-label">Description *</label>
              
              <!-- AI BUTTON -->
              <!-- Uses 'aiBtn' ID so app.js attaches the listener automatically -->
              <button type="button" id="aiBtn" class="btn-ai">
                <span>✨</span> Generate with AI
              </button>
            </div>

            <textarea
              id="description"
              name="description"
              class="form-input"
              rows="4"
              style="resize: vertical;"
              required
            ><%= product.description %></textarea>
          </div>

          <!-- Actions -->
          <div class="form-actions">
            <button type="submit" class="auth-btn">Update Product</button>
            <!-- Smart Cancel: Returns to Dashboard or Products list -->
            <a href="javascript:history.back()" class="btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>

    <!-- REQUIRED: Load app.js for AI functionality -->
    <script src="/js/app.js"></script>
  </body>
</html>