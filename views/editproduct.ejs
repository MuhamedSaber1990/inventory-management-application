<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product - Inventory Management</title>
    <link rel="stylesheet" href="/css/app.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body class="auth-body">
    <div class="auth-wrapper import-wrapper">
      <div class="auth-card">
        <header class="auth-header">
          <h1>Edit Product</h1>
          <p>Update details for <strong><%= product.name %></strong></p>
        </header>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="auth-alert auth-alert-error">
            ⚠️ <%= errorMessage %>
          </div>
        <% } %>

        <form action="/products/edit/<%= product.id %>" method="POST" class="auth-form">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <!-- Name -->
          <div class="auth-field">
            <label for="name">Product Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              class="filter-input"
              value="<%= product.name %>"
              required
            />
          </div>

          <!-- Category -->
          <div class="auth-field">
            <label for="category">Category</label>
            <select id="category" name="category" class="filter-select w-full">
              <option value="" disabled>-- Select Category --</option>
              <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                <% categories.forEach(cat => { %>
                  <option 
                    value="<%= cat.id %>" 
                    <%= product.category_id === cat.id ? 'selected' : '' %>
                  >
                    <%= cat.name %>
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>

          <!-- Price & Quantity -->
          <div class="form-row">
            <div class="auth-field">
              <label for="price">Price (€) *</label>
              <input
                type="number"
                id="price"
                name="price"
                step="0.01"
                min="0"
                max="1000000"
                class="filter-input"
                value="<%= product.price %>"
                required
              />
            </div>

            <div class="auth-field">
              <label for="quantity">Quantity *</label>
              <input
                type="number"
                id="quantity"
                name="quantity"
                min="0"
                max="10000"
                class="filter-input"
                value="<%= product.quantity %>"
                required
              />
            </div>
          </div>

          <!-- Description -->
          <div class="auth-field">
            <div class="label-row">
              <label for="description" class="mb-0">Description *</label>
              <button type="button" id="aiBtn" class="btn-ai">
                <span>✨</span> Generate with AI
              </button>
            </div>

            <textarea
              id="description"
              name="description"
              class="filter-input resize-y"
              rows="4"
              required
            ><%= product.description %></textarea>
          </div>

          <!-- Actions -->
          <div class="form-actions">
            <button type="submit" class="auth-btn w-auto">Update Product</button>
            <a href="javascript:history.back()" class="auth-btn btn-ghost w-auto">Cancel</a>
          </div>
        </form>
      </div>
    </div>
    
    <script src="/js/app.js"></script>
  </body>
</html>