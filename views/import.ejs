<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Import Products</title>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body class="auth-body">
    <div class="auth-wrapper import-wrapper">
      <div class="auth-card">
        <header class="auth-header header-center">
          <h1>Import Products</h1>
          <p>Upload a CSV file to bulk add inventory.</p>
        </header>

        <!-- Instructions & Template -->
        <div class="info-box">
          <!-- 1. Download Link -->
          <div class="template-section">
            <strong>Step 1:</strong>
            <a href="/data/template/csv" class="template-link">
              Download Sample CSV Template
            </a>
          </div>

          <!-- 2. Requirements -->
          <div>
            <strong>Step 2: Check Requirements</strong>
            <ul class="info-list">
              <li><strong>Headers:</strong> Name, Price, Quantity</li>
              <li>
                <strong>Optional:</strong> SKU, Barcode, Description, Category
              </li>
              <li>New categories are created automatically.</li>
            </ul>
          </div>
        </div>

        <!-- Success Message -->
        <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="auth-alert auth-alert-success"><%= successMessage %></div>
        <% } %>

        <!-- Error Message -->
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="auth-alert auth-alert-error"><%= errorMessage %></div>
        <% } %>

        <!-- Import Form -->
        <form
          action="/data/import/products"
          method="POST"
          enctype="multipart/form-data"
          class="auth-form"
        >
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

          <div class="auth-field">
            <label for="csvFile">Step 3: Upload CSV File</label>
            <input
              type="file"
              id="csvFile"
              name="csvFile"
              accept=".csv"
              required
              class="file-input"
            />
          </div>

          <button type="submit" class="auth-btn">Upload and Import</button>
        </form>

        <footer class="auth-footer footer-actions">
          <a href="/products" class="auth-btn btn-ghost w-auto">Cancel</a>
        </footer>
      </div>
    </div>
  </body>
</html>
